{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="p-5 container-fluid">

    <form method="post">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
        {% endif %}
        
        <h1 class="h3 mb-3 font-weight-normal">Renseignez les champs ci-dessous</h1>
        <div class="mb-3">
            <label class="form-label" for="inputUsername">Username</label>
            <input class="form-control" type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
        </div>
        <div class="mb-3">
            <label class="form-label" for="inputPassword">Password</label>
            <input class="form-control" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
        
        <input type="hidden" name="_csrf_token"
        value="{{ csrf_token('authenticate') }}"
        >
        
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
            
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <div class="text-center">

                <button class="btn btn-lg main-btn" type="submit">
                    Connexion
                </button>
            </div>
        </form>
    </div>
        {% endblock %}
        